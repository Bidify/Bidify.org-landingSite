# Traefik Infrastructure Configuration
# Copy this file to .env and update with your values

# ACME email for Let's Encrypt certificates (REQUIRED)
ACME_EMAIL=your-email@example.com

# Logging level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Optional: Dashboard access control
# Format: username:password (use htpasswd -nb username password to generate)
# TRAEFIK_AUTH_USERS=admin:$2y$05$...

# Optional: Enable/disable dashboard
TRAEFIK_DASHBOARD_ENABLED=false

# Optional: Custom entrypoints
# TRAEFIK_ENTRYPOINTS=web,websecure

# Optional: Enable metrics
# TRAEFIK_METRICS_ENABLED=true
# TRAEFIK_METRICS_DATADOG=true
# TRAEFIK_METRICS_DATADOG_ADDRESS=""

# Optional: Enable experimental features
# TRAEFIK_EXPERIMENTAL=true

# Optional: CORS settings
# TRAEFIK_CORS_ALLOWEDORIGINS=*
# TRAEFIK_CORS_ALLOWEDMETHODS=GET,POST,PUT,DELETE,OPTIONS
# TRAEFIK_CORS_ALLOWEDHEADERS=Content-Type,Authorization